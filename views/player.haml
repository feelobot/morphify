%form{:id => "search", :autocomplete => "off"}
  %fieldset
    %ol
      %li
        %input{:type => "text", :name => "search", :id => "searchbar", :placeholder => "Search for a Song, Artist or Album"}
#output
  #results
    %p loading...
  :javascript
    $('#searchbar').val('#{@ytid}');
    $('#results').html('<audio autoplay="autoplay" controls="controls"><source src="songs/#{@ytid}.wav">Your browser does not support the audio tag.</audio>');
    setTimeout(function(){$('#results').slideDown()},500);